{
  "name": "node-json-adapter",
  "version": "1.3.0",
  "description": "map, transform, filter, and validate json and javascript objects",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start": "ts-node src/index.ts",
    "test": "jest --runInBand",
    "test:debug": "DEBUG=json-adapter DEBUG_DEPTH=10 npm test",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chaudhryjunaid/json-adapter.git"
  },
  "keywords": [
    "json",
    "object",
    "map",
    "filter",
    "transform",
    "validate",
    "mapper",
    "transformer",
    "validator",
    "adapter",
    "converter"
  ],
  "author": "Chaudhry Junaid Anwar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chaudhryjunaid/json-adapter/issues"
  },
  "homepage": "https://github.com/chaudhryjunaid/json-adapter#readme",
  "dependencies": {
    "debug": "^4.4.0",
    "dot-object": "^2.1.5",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/dot-object": "^2.1.6",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "silent": false,
    "verbose": true
  }
}
